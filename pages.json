{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue",
      "^uni-(.*)": "@/dcloudio/uniui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/company/company"
    },
    {
      "path": "pages/home/question/question"
    },
    {
      "path": "pages/home/find/find",
      "style": {
        "navigationBarTitleText": "发现",
        "enablePullDownRefresh": true,
        "app-plus": {
          "titleNView": {
            "titleColor": "#222222",
            "titleSize": "18px",
            "titleAlign": "center"
          }
        }
      }
    },
    {
      "path": "pages/home/my/my"
    },
    {
      "path": "pages/login/login"
    },
    {
      "path": "pages/home/find/shareInterview/getMore",
      "style": {
        "navigationBarTitleText": "面试技巧",
        "enablePullDownRefresh": true,
        "app-plus": {
          "titleNView": {
            "titleColor": "#222222",
            "titleSize": "18px",
            "titleAlign": "center"
          }
        }
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "app-plus": {
      "background": "#efeff4"
    }
  },
  "tabBar": {
    "color": "#b4b4bd",
    "selectedColor": "#e40137",
    "list": [
      {
        "pagePath": "pages/home/company/company",
        "iconPath": "static/image/iconPath/company.png",
        "selectedIconPath": "static/image/selectedIconPath/company.png",
        "text": "公司"
      },
      {
        "pagePath": "pages/home/question/question",
        "iconPath": "static/image/iconPath/question.png",
        "selectedIconPath": "static/image/selectedIconPath/question.png",
        "text": "刷题"
      },
      {
        "pagePath": "pages/home/find/find",
        "iconPath": "static/image/iconPath/find.png",
        "selectedIconPath": "static/image/selectedIconPath/find.png",
        "text": "发现"
      },
      {
        "pagePath": "pages/home/my/my",
        "iconPath": "static/image/iconPath/my.png",
        "selectedIconPath": "static/image/selectedIconPath/my.png",
        "text": "我的"
      }
    ]
  }
}
